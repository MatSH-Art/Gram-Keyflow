{
  "manifest_version": 3,
  "name": "Gram Keyflow",
  "description": "Keyboard shortcuts for navigating and interacting with Instagram posts",
  "version": "1.2",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js", "visibilityMode.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.instagram.com/*"]
}
